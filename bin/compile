#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

message() {
  echo "-----> $*"
}

# Install Jekyll into APP_ROOT/.gems
cat << EOF > ~/.gemrc
gemhome: $1/.gems
gempath:
- $1/.gems
EOF

message "Installing jekyll version 0.11.2"
gem install jekyll -v 0.11.2 --no-rdoc --no-ri | indent

message "Installing Liquid version 2.2.2"
gem install liquid -v 2.2.2 --no-rdoc --no-ri | indent

message "Installing redcarpet version 3.0.0"
gem install redcarpet -v 3.0.0 --no-rdoc --no-ri | indent

# Run Jekyll
message "Setting environment variables"
export GEM_HOME=$1/.gems
export PATH=$1/.gems/bin:$PATH
export LC_ALL=en_US.UTF8
cd $1
message "Compiling Jekyll site"
$1/.gems/bin/jekyll --no-auto --no-server --no-lsi --safe | indent
