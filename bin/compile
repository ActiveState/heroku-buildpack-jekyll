#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Compiling Jekyll site"

# Install Jekyll

cat << EOF > ~/.gemrc
gemhome: $1/gems
gempath:
- $1/gems
EOF

/usr/local/bin/gem install jekyll RedCloth --no-rdoc --no-ri | indent

# Add some excludes
if [ ! -s $1/_config.yml ]; then
	echo "Adding excludes to _config.yml" | indent
  echo "exclude:  [ Gemfile, Gemfile.lock, Procfile, vendor, gems]" > $1/_config.yml
fi

# Run Jekyll
echo "Running Jekyll" | indent
export GEM_HOME=$1/gems
export PATH=$1/gems/bin:$PATH
cd $1
$1/gems/bin/jekyll | indent

# Cleanup
# rm ~/.gemrc
